                                </Entry.Behaviors>
                            </Entry>
                            <!--ValueSlider-->
                            <Slider
                                Grid.Row="3"
                                Grid.ColumnSpan="2"
                                Grid.Column="1"
                                x:Name="GPSRequestIntervalSlider"
                                Minimum="{Binding Ux_MinimumAllowedGPSRequestInterval}"
                                Maximum="{Binding Ux_MaximumAllowedGPSRequestInterval}"
                                Style="{StaticResource SliderStyle}"
                                Value="{Binding GpsRequestInterval,Mode=TwoWay}">
                                <Slider.Behaviors>
                                    <toolkit:EventToCommandBehavior
                                        EventName="DragCompleted"
                                        Command="{Binding UpdateSettingsCommand}" />
                                </Slider.Behaviors>
                            </Slider>
                        </StackLayout>
                    </Frame>
                </Grid>
<!--/child Grid GpsRequestInterval-->
            </Grid>
        
    </StackLayout>
    </ScrollView>
</ContentPage>