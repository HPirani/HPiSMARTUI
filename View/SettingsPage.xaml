        <ResourceDictionary>
            <Style
                x:Key="HeaderLabel"
                TargetType="{x:Type Label}">
                <Setter
                    Property="FontSize"
                    Value="Large" />
                <Setter
                    Property="TextColor"
                    Value="Black" />
            </Style>
